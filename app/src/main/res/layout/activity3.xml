<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jgli.simpleapplication.Activity3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Provide_Info"
        android:id="@+id/btn_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classNameTextView"
        android:layout_below="@+id/btn_info"
        android:layout_alignLeft="@+id/btn_info"
        android:layout_alignStart="@+id/btn_info"
        android:layout_marginTop="117dp"
        android:layout_alignRight="@+id/btn_info"
        android:layout_alignEnd="@+id/btn_info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personNameTextView"
        android:layout_alignTop="@+id/classNameTextView"
        android:layout_alignLeft="@+id/classNameTextView"
        android:layout_alignStart="@+id/classNameTextView"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/classNameTextView"
        android:layout_alignEnd="@+id/classNameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailNameTextView"
        android:layout_below="@+id/personNameTextView"
        android:layout_alignLeft="@+id/personNameTextView"
        android:layout_alignStart="@+id/personNameTextView"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/personNameTextView"
        android:layout_alignEnd="@+id/personNameTextView" />

</RelativeLayout>
